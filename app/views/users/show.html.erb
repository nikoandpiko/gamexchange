<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.1),rgba(0,0,0,0.5)), url(https://i.redd.it/vrno30rkp1w51.png);">
  <div class="container-xl">
    <div class="d-flex">
      <%# <%= image_tag "2b_default_avatar", class: "avatar-large" THANKS HEROKU! %>
      <img src="https://avatarfiles.alphacoders.com/163/163785.jpg" alt="2B" class="avatar-large">
        <div class="ml-2">
          <h3><%= @user.username %>'s</h3>
          <h1>DASHBOARD</h1>
          <button type="button" class="btn" data-toggle="modal" data-target="#starsModal">
            <h3 class="profile-stars">★★★★☆</h3>
          </button>
          <div class="modal fade" id="starsModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLongTitle">Reviews</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <ul class="list-group">
                    <% Review.all.each do |review| %>
                      <span class="border mt-3">
                      <div class="row">
                      <p style="color: Gold;" class="starz pl-4 mt-4"><%  review.rating.times do %><i class="fas fa-star"></i><% end %><% (5 - review.rating).times do %><i class="far fa-star"></i><% end %></p>
                      <p class="pl-4 mt-4">Review by <%= link_to review.reviewer&.username %></p>
                      </div>
                      <p class="pl-4">"<%= review.content %>"</p><br>
                      </span>
                    <% end %>
                  </ul>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
              </div>
            </div>
          </div>
            <div class="container mt-3">
              <div class="row justify-content-left">
                <div class="btn-primary new-offer-button">
                  <%= link_to "Add New Offer", new_offer_path, :class => "btn", style: "color:white" %>
                </div>
              </div>
            </div>
        </div>
      </div>
  </div>
</div>

<div class="tab">
  <button class="tablinks" onclick="profileTabs(event, 'mylistedgames')">My Listed Games</button>
  <button class="tablinks" onclick="profileTabs(event, 'rentedout')">Rented Out</button>
  <button class="tablinks" onclick="profileTabs(event, 'myrentals')">My Rentals</button>
</div>

<div class="container tabcontent" id="mylistedgames">
  <div class="card-deck">
    <% @offers_for_user.each do |offer| %>
      <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12">
        <div class="card card-index p-0 my-3">
          <img src="<%= offer.game.image %>" alt="<%= offer.game.title %>" class="card-index-image">
          <div class="pt-0 px-0">
              <% if offer.platform == "Playstation 4" %>
                <div class="d-flex justify-content-around">
                  <p class="flex-grow-1 p-2 progress-bar bg-blue"><i class="fab fa-playstation"></i></p>
                  <p class="flex-grow-1 p-2 progress-bar bg-secondary width: 30%"><i class="fas fa-toggle-on"></i></p>
                  <p class="flex-grow-1 p-2 progress-bar bg-secondary width: 30%"><i class="fab fa-xbox"></i></p>
                </div>
              <% end %>
              <% if offer.platform == "Nintendo Switch" %>
                <div class="d-flex justify-content-around">
                  <p class="flex-grow-1 p-2 progress-bar bg-secondary"><i class="fab fa-playstation"></i></p>
                  <p class="flex-grow-1 p-2 progress-bar bg-danger width: 30%"><i class="fas fa-toggle-on"></i></p>
                  <p class="flex-grow-1 p-2 progress-bar bg-secondary width: 30%"><i class="fab fa-xbox"></i></p>
                </div>
              <% end %>
              <% if offer.platform == "Xbox One" %>
                <div class="d-flex justify-content-around">
                  <p class="flex-grow-1 p-2 progress-bar bg-secondary"><i class="fab fa-playstation"></i></p>
                  <p class="flex-grow-1 p-2 progress-bar bg-secondary width: 30%"><i class="fas fa-toggle-on"></i></p>
                  <p class="flex-grow-1 p-2 progress-bar bg-success width: 30%"><i class="fab fa-xbox"></i></p>
                </div>
              <% end %>
            <div class="card-body pt-0">
              <h5 class="card-title"><%= offer.game.title %></h5>
              <p class="card-text text-secondary"><%= offer.game.genre %></p>
            </div>
          </div>
          <button type="button" class="btn btn-dark button-text button-index btn-lg btn-block"><%= link_to "UNLIST", offer_path(offer) %></button>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div id="rentedout" class="tabcontent container">
  <div class="card-deck">
    <% @user.rentals_as_owner.each do |rental| %>
      <div class="col-lg-3">
        <div class="card card-index p-0 my-3">
          <img src="<%= rental.offer.game.image %>" alt="<%= rental.offer.game.image %>" class="card-index-image">
          <div class="pt-0 px-0">
              <% if rental.offer.platform == "Playstation 4" %>
              <div class="d-flex justify-content-around">
                <p class="flex-grow-1 p-2 progress-bar bg-blue"><i class="fab fa-playstation"></i></p>
                <p class="flex-grow-1 p-2 progress-bar bg-secondary width: 30%"><i class="fas fa-toggle-on"></i></p>
                <p class="flex-grow-1 p-2 progress-bar bg-secondary width: 30%"><i class="fab fa-xbox"></i></p>
              </div>
              <% end %>
              <% if rental.offer.platform == "Nintendo Switch" %>
              <div class="d-flex justify-content-around">
                <p class="flex-grow-1 p-2 progress-bar bg-secondary"><i class="fab fa-playstation"></i></p>
                <p class="flex-grow-1 p-2 progress-bar bg-danger width: 30%"><i class="fas fa-toggle-on"></i></p>
                <p class="flex-grow-1 p-2 progress-bar bg-secondary width: 30%"><i class="fab fa-xbox"></i></p>
              </div>
              <% end %>
              <% if rental.offer.platform == "Xbox One" %>
              <div class="d-flex justify-content-around">
                <p class="flex-grow-1 p-2 progress-bar bg-secondary"><i class="fab fa-playstation"></i></p>
                <p class="flex-grow-1 p-2 progress-bar bg-secondary width: 30%"><i class="fas fa-toggle-on"></i></p>
                <p class="flex-grow-1 p-2 progress-bar bg-success width: 30%"><i class="fab fa-xbox"></i></p>
              </div>
              <% end %>
            <div class="card-body pt-0">
              <h5 class="card-title"><%= rental.offer.game.title %></h5>
                <p class="card-text text-secondary"><%= rental.offer.game.genre %></p>
                <% if rental.status == 'Accepted' %>
                  <p class="card-text text-secondary">(Rented out to <%= link_to rental.user.username, rental.user %>)</p>
                    <%= simple_form_for (rental) do |f| %>
                      <%= f.submit "Request Return", class: "btn btn-light w-auto", data: { confirm: 'Are you sure?' } %>
                      <%= f.input :status, input_html: { value: 'Request' }, as: :hidden %>
                    <% end %>
                <% elsif rental.status == 'Returned'%>
                  <p class="card-text text-secondary">
                    (Was rented out to <%= link_to rental.user.username, rental.user %>)
                  </p>
                  <%# Have RETURNED status games automatically go back to My Listed Games? %>
                  <p>RETURNED</p>
                  <% elsif rental.status == 'Pending' %>
                    <p class="card-text text-secondary">(<%= link_to rental.user.username, rental.user %> wants to rent out your game)</p>
                      <p>PENDING</p>
                        <%= simple_form_for (rental) do |f| %>
                          <%= f.submit "Accept", class: "btn btn-light w-auto", data: { confirm: 'Are you sure?' } %>
                          <%= f.input :status, input_html: { value: 'Accepted' }, as: :hidden %>
                        <% end %>
                        <%= simple_form_for (rental) do |f| %>
                          <%= f.submit "Decline", class: "btn btn-light w-auto", data: { confirm: 'Are you sure?' } %>
                          <%= f.input :status, input_html: { value: 'Declined' }, as: :hidden %>
                        <% end %>
                  <% elsif rental.status == 'Declined' %>
                    <p>DECLINED</p>
                  <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div id="myrentals" class="tabcontent container">
  <div class="card-deck">
    <% @rentals.each do |rental| %>
      <div class="col-lg-3">
        <div class="card card-offer-profile p-0 my-3">
          <img src="<%= rental.offer.game.image %>" alt="<%= rental.offer.game.image %>" class="card-index-image">
          <div class="pt-0 px-0">
              <% if rental.offer.platform == "Playstation 4" %>
              <div class="d-flex justify-content-around">
                <p class="flex-grow-1 p-2 progress-bar bg-blue"><i class="fab fa-playstation"></i></p>
                <p class="flex-grow-1 p-2 progress-bar bg-secondary width: 30%"><i class="fas fa-toggle-on"></i></p>
                <p class="flex-grow-1 p-2 progress-bar bg-secondary width: 30%"><i class="fab fa-xbox"></i></p>
              </div>
              <% end %>
              <% if rental.offer.platform == "Nintendo Switch" %>
              <div class="d-flex justify-content-around">
                <p class="flex-grow-1 p-2 progress-bar bg-secondary"><i class="fab fa-playstation"></i></p>
                <p class="flex-grow-1 p-2 progress-bar bg-danger width: 30%"><i class="fas fa-toggle-on"></i></p>
                <p class="flex-grow-1 p-2 progress-bar bg-secondary width: 30%"><i class="fab fa-xbox"></i></p>
              </div>
              <% end %>
              <% if rental.offer.platform == "Xbox One" %>
              <div class="d-flex justify-content-around">
                <p class="flex-grow-1 p-2 progress-bar bg-secondary"><i class="fab fa-playstation"></i></p>
                <p class="flex-grow-1 p-2 progress-bar bg-secondary width: 30%"><i class="fas fa-toggle-on"></i></p>
                <p class="flex-grow-1 p-2 progress-bar bg-success width: 30%"><i class="fab fa-xbox"></i></p>
                </div>
              <% end %>
            <div class="card-body pt-0">
              <h5 class="card-title"><%= rental.offer.game.title %></h5>
              <p class="card-text text-secondary"><%= rental.offer.game.genre %></p>
              <p class="card-text text-secondary">(Rented from <%= link_to rental.offer.user.username, rental.offer.user %>)</p>
                  <% if rental.status == 'Accepted' %>
                      <div class="d-flex justify-content-center">
                        <button type="button" class="btn btn-dark button-text button-index btn-lg btn-block" data-toggle="modal" data-target="#reviewModal-<%= rental.id %>">
                          Return
                        </button>
                      </div>
                        <div class="modal fade" id="reviewModal-<%= rental.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                          <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                              <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLongTitle">Leave a Review</h5>
                                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                  </button>
                              </div>
                              <div class="modal-body">
                                <%= simple_form_for [ rental.offer.user, @review ] do |f| %>
                                  <%= f.input :rating, collection: (1..5).to_a, label: "Rate your experience" %>
                                  <%= f.input :content %>
                                  <%= hidden_field_tag :rental_id, rental.id %>
                                  <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Go Back</button>
                                    <%= f.submit "Return and Review", class: "btn btn-primary" %>
                                  </div>
                                <% end %>
                              </div>
                            </div>
                          </div>
                        </div>
                    <% elsif rental.status == 'Declined' %>
                      <p class="card-text text-secondary">(Declined by <%= link_to rental.offer.user.username, rental.offer.user %>)</p>
                    <% elsif rental.status == 'Returned' %>
                      <p class="card-text text-secondary">(Returned on <%= Date.today %>  </p>
                      <!-- Adding return date? -->
                      <%= rental.status %>
                    <% elsif rental.status == 'Request' %>
                      <p class="card-text text-secondary">(Immediate return request by <%= link_to rental.offer.user.username, rental.offer.user %>)</p>
                      <%= simple_form_for (rental) do |f| %>
                        <div class="d-flex justify-content-center">
                        <%= f.submit "Return it NOW", class: "btn btn-danger return-button flex-grow-1", data: { confirm: 'Are you sure?' }  %>
                        </div>
                        <%= f.input :status, input_html: { value: "Returned #{Date.today}" }, as: :hidden %>
                      <% end %>
                    <% else %>
                      <p class="card-text text-secondary">(Waiting approval by <%= link_to rental.offer.user.username, rental.offer.user %>)</p>
                      <%= rental.status %>
                  <% end %>
                <%# - How about adding a 'History' header and moving the rentals there? %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

